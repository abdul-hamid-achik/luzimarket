{
  "name": "backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "migrate:generate": "npx --yes drizzle-kit generate",
    "migrate:up": "npx --yes drizzle-kit migrate",
    "migrate:down": "npx --yes drizzle-kit drop",
    "migrate:push": "npx --yes drizzle-kit push",
    "seed": "tsx src/db/seed.ts",
    "test": "vitest run",
    "lint": "next lint",
    "db:setup": "npm run migrate:push && npm run seed",
    "pglite:setup": "DB_MODE=pglite tsx src/db/setup-pglite.ts",
    "pglite:seed": "DB_MODE=pglite tsx src/db/seed.ts",
    "test:offline": "DB_MODE=pglite npm run test"
  },
  "dependencies": {
    "@electric-sql/pglite": "^0.3.2",
    "@neondatabase/serverless": "^1.0.0",
    "@vercel/blob": "^1.0.1",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.0.3",
    "drizzle-orm": "^0.43.1",
    "http-status-codes": "^2.2.0",
    "jsonwebtoken": "^9.0.0",
    "next": "15.3.2",
    "next-auth": "^4.24.11",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.8.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/dotenv": "^8.2.0",
    "@types/http-status-codes": "^1.2.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/uuid": "^10.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "drizzle-kit": "^0.31.1",
    "drizzle-seed": "^0.3.1",
    "tsx": "^4.19.4",
    "typescript": "^5"
  }
}