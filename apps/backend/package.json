{
  "name": "ecommerce-backend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/index.ts",
    "build": "tsc",
    "start": "node -r tsconfig-paths/register dist/index.js",
    "migrate:generate": "drizzle-kit generate --name",
    "migrate:up": "drizzle-kit up",
    "migrate:down": "drizzle-kit drop",
    "test": "jest --config jest.config.js --passWithNoTests",
    "lint": "eslint src --ext .ts",
    "seed": "ts-node-dev --respawn --transpile-only src/seed.ts",
    "swagger:generate": "node dist/swagger.js"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "drizzle-kit": "^0.31.0",
    "drizzle-orm": "^0.23.0",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.1",
    "pg": "^8.11.2",
    "serverless-http": "^3.0.0",
    "stripe": "^12.6.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.3",
    "zod": "^3.23.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^20.3.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "eslint": "^8.40.0",
    "jest": "^29.7.0",
    "jest-cli": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6",
    "tsconfig-paths": "^4.2.0"
  }
}
