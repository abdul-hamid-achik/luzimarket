{
  "name": "ecommerce-backend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/index.ts",
    "build": "vite build",
    "start": "node dist/index.js",
    "migrate:generate": "drizzle-kit generate --name",
    "migrate:up": "drizzle-kit up",
    "migrate:down": "drizzle-kit drop",
    "migrate:push": "drizzle-kit push",
    "test": "vitest run",
    "lint": "eslint src --ext .ts",
    "seed": "ts-node -r tsconfig-paths/register src/seed.ts",
    "db:setup": "npm run migrate:down && npm run migrate:up && npm run seed"
  },
  "dependencies": {
    "@libsql/client": "^0.15.6",
    "@neondatabase/serverless": "^1.0.0",
    "axios": "^1.4.0",
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^11.10.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.43.1",
    "drizzle-seed": "^0.3.1",
    "express": "^4.18.2",
    "express-graphql": "^0.12.0",
    "express-pino-logger": "^7.0.0",
    "graphql": "^15.8.0",
    "http-status-codes": "^2.3.0",
    "json5": "^2.2.3",
    "jsonwebtoken": "^9.0.1",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "react-scripts": "^5.0.1",
    "serverless-http": "^3.0.0",
    "stripe": "^12.6.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.3",
    "tsconfig-paths": "^4.2.0",
    "uuid": "^11.1.0",
    "ws": "^8.18.2",
    "zod": "^3.23.2"
  },
  "devDependencies": {
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
    "@esbuild-plugins/node-modules-polyfill": "^0.2.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^20.3.1",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "drizzle-kit": "^0.31.1",
    "eslint": "^9.1.0",
    "rollup-plugin-polyfill-node": "^0.13.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.1",
    "typescript": "^5.1.6",
    "vite": "^6.3.5",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^3.1.3"
  }
}
