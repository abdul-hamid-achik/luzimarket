{
  "name": "ecommerce-backend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/index.ts",
    "build": "tsc && tsc-alias",
    "start": "node -r tsconfig-paths/register dist/index.js",
    "migrate:generate": "drizzle-kit generate --name",
    "migrate:up": "drizzle-kit up",
    "migrate:down": "drizzle-kit drop",
    "migrate:push": "drizzle-kit push",
    "test": "jest --config jest.config.js --passWithNoTests",
    "lint": "eslint src --ext .ts",
    "seed": "ts-node -r tsconfig-paths/register src/seed.ts",
    "db:setup": "npm run migrate:down && npm run migrate:up && npm run seed"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.0",
    "@tinacms/datalayer": "^1.2.0",
    "@tinacms/graphql": "^1.2.0",
    "abstract-level": "^3.1.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.43.1",
    "drizzle-seed": "^0.3.1",
    "express": "^4.18.2",
    "express-graphql": "^0.12.0",
    "graphql": "^15.8.0",
    "http-status-codes": "^2.3.0",
    "json5": "^2.2.3",
    "jsonwebtoken": "^9.0.1",
    "pg": "^8.11.2",
    "postgres": "^3.4.5",
    "serverless-http": "^3.0.0",
    "stripe": "^12.6.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.3",
    "tinacms": "^1.2.0",
    "tinacms-gitprovider-github": "^2.0.16",
    "tsconfig-paths": "^4.2.0",
    "ws": "^8.18.1",
    "zod": "^3.23.2"
  },
  "devDependencies": {
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
    "@esbuild-plugins/node-modules-polyfill": "^0.2.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^20.3.1",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "drizzle-kit": "^0.31.0",
    "eslint": "^8.40.0",
    "jest": "^29.7.0",
    "jest-cli": "^29.7.0",
    "rollup-plugin-polyfill-node": "^0.13.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.1",
    "typescript": "^5.1.6"
  }
}
