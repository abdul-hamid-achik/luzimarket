{
    "kind": "collectionType",
    "collectionName": "bundles",
    "info": {
        "singularName": "bundle",
        "pluralName": "bundles",
        "displayName": "Bundle",
        "description": "A bundle of multiple products"
    },
    "options": {
        "draftAndPublish": false
    },
    "attributes": {
        "title": {
            "type": "string",
            "required": true
        },
        "slug": {
            "type": "uid",
            "targetField": "title"
        },
        "products": {
            "type": "relation",
            "relation": "manyToMany",
            "target": "api::product.product"
        },
        "price": {
            "type": "decimal"
        },
        "image": {
            "type": "media",
            "allowedTypes": [
                "images"
            ],
            "multiple": false
        }
    }
}