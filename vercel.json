{
  "version": 2,
  "installCommand": "npm install --no-optional --legacy-peer-deps",
  "env": {
    "CORS_ORIGIN": "https://luzimarket.shop",
    "PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD": "1",
    "LOG_LEVEL": "info",
    "ROLLUP_NATIVE_DISABLE": "1",
    "NODE_OPTIONS": "--no-experimental-fetch"
  },
  "builds": [
    {
      "src": "apps/frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "npm --workspace=apps/frontend run build",
        "distDir": "apps/frontend/dist"
      }
    },
    {
      "src": "apps/backend/package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "^/(.*)$",
      "dest": "/index.html"
    }
  ]
}