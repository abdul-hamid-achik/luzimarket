{
  "version": 2,
  "env": {
    "CORS_ORIGIN": "https://luzimarket.vercel.app",
    "DATABASE_URL": "@DATABASE_POSTGRES_URL",
    "JWT_SECRET": "@JWT_SECRET",
    "STRIPE_SECRET_KEY": "@STRIPE_SECRET_KEY"
  },
  "builds": [
    {
      "src": "apps/frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "apps/backend/src/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "handle": "filesystem"
    },
    {
      "src": "/api/(.*)",
      "dest": "apps/backend/src/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "apps/frontend/dist/index.html"
    }
  ]
}