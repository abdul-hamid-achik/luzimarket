{
  "version": 2,
  "installCommand": "npm install",
  "env": {
    "CORS_ORIGIN": "https://luzimarket.shop",
    "PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD": "1",
    "LOG_LEVEL": "info"
  },
  "build": {
    "env": {
      "PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD": "1"
    }
  },
  "builds": [
    {
      "src": "apps/frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "npm run build:frontend",
        "distDir": "apps/frontend/dist"
      }
    },
    {
      "src": "apps/backend/package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "^/(.*)$",
      "dest": "/index.html"
    }
  ]
}