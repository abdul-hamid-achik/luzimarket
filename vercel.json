{
  "version": 2,
  "env": {
    "CORS_ORIGIN": "https://luzimarket.vercel.app",
    "PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD": "1"
  },
  "build": {
    "env": {
      "PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD": "1"
    }
  },
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "npm run build",
        "distDir": "apps/frontend/dist"
      }
    },
    {
      "src": "apps/backend/dist/index.js",
      "use": "@vercel/node",
      "config": {
        "runtime": "nodejs22.x",
        "includeFiles": [
          "apps/backend/tsconfig.json",
          "tsconfig.base.json",
          "node_modules/bcrypt/lib/binding/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "handle": "filesystem"
    },
    {
      "src": "/api/(.*)",
      "dest": "apps/backend/dist/index.js"
    },
    {
      "src": "^/(.*)$",
      "dest": "/index.html"
    }
  ]
}