{
  "name": "luzimarket",
  "private": true,
  "workspaces": [
    "apps/backend",
    "apps/frontend"
  ],
  "scripts": {
    "dev": "npx --yes dotenv-cli -- concurrently --kill-others --raw \"npm --workspace=apps/backend run dev\" \"npm --workspace=apps/frontend run dev\"",
    "dev:frontend": "npx --yes dotenv-cli -- npm --workspace=apps/frontend run dev",
    "dev:backend": "npx --yes dotenv-cli -- npm --workspace=apps/backend run dev",
    "deploy": "npx --yes dotenv-cli -- npx --yes vercel --prod",
    "build": "npx --yes dotenv-cli -- npm-run-all --parallel build:*",
    "build:frontend": "ROLLUP_NATIVE_DISABLE=1 npm --workspace=apps/frontend run build",
    "build:backend": "npm --workspace=apps/backend run build",
    "preview:frontend": "npm --workspace=apps/frontend run preview",
    "lint": "npm-run-all --parallel lint:*",
    "lint:backend": "npm --workspace=apps/backend run lint",
    "lint:frontend": "npm --workspace=apps/frontend run lint",
    "test:backend": "npx --yes dotenv-cli -- npm --workspace=apps/backend run test",
    "test:frontend": "npx --yes dotenv-cli -- npm --workspace=apps/frontend run test",
    "test:e2e": "npx --yes dotenv-cli -- playwright test",
    "test": "npx --yes dotenv-cli -- npm-run-all test:backend test:frontend test:e2e",
    "postinstall": "if [ \"$VERCEL\" ]; then echo 'Skipping Playwright install on Vercel'; else playwright install; fi",
    "migrate:generate": "npx --yes dotenv-cli -- npm --workspace=apps/backend run migrate:generate",
    "migrate:up": "npx --yes dotenv-cli -- npm --workspace=apps/backend run migrate:up",
    "migrate:down": "npx --yes dotenv-cli -- npm --workspace=apps/backend run migrate:down",
    "migrate:push": "npx --yes dotenv-cli -- npm --workspace=apps/backend run migrate:push",
    "migrate:pull": "npx --yes dotenv-cli -- npm --workspace=apps/backend run migrate:pull",
    "seed": "npx --yes dotenv-cli -- npm --workspace=apps/backend run seed",
    "start:backend": "npm --workspace=apps/backend run start",
    "start:frontend": "npm --workspace=apps/frontend run preview",
    "start": "npx --yes dotenv-cli -- concurrently --kill-others --raw --handle-input \"npm run start:backend\" \"npm run start:frontend\"",
    "studio": "npx --yes dotenv-cli -- npx --workspace=apps/backend --yes drizzle-kit studio"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "@types/node": "^22.10.1",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "eslint": "^9.17.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "typescript": "~5.6.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18.0.0 <=22.x"
  },
  "dependencies": {
    "uuid": "^9.0.1"
  }
}