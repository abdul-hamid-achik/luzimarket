{
  "name": "luzimarket",
  "private": true,
  "workspaces": [
    "apps/backend",
    "apps/frontend"
  ],
  "scripts": {
    "dev": "docker compose up --build -d",
    "dev:frontend": "npm --workspace=apps/frontend run dev",
    "dev:backend": "npm --workspace=apps/backend run dev",
    "deploy": "npx --yes vercel@latest --prod",
    "build": "npm run build:backend && npm run build:frontend",
    "build:frontend": "npm --workspace=apps/frontend run build",
    "build:backend": "npm --workspace=apps/backend run build",
    "preview:frontend": "npm --workspace=apps/frontend run preview",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "npm --workspace=apps/backend run lint",
    "lint:frontend": "npm --workspace=apps/frontend run lint",
    "test:backend": "npm --workspace=apps/backend run test",
    "test:frontend": "npm --workspace=apps/frontend run test",
    "test": "npm run test:backend && npm run test:frontend",
    "postinstall": "if [ \"$VERCEL\" ]; then echo 'Skipping Playwright install on Vercel'; else playwright install; fi",
    "test:e2e": "playwright test",
    "migrate:generate": "npm --workspace=apps/backend run migrate:generate",
    "migrate:up": "npm --workspace=apps/backend run migrate:up",
    "migrate:down": "npm --workspace=apps/backend run migrate:down",
    "migrate:push": "npm --workspace=apps/backend run migrate:push",
    "migrate:pull": "npm --workspace=apps/backend run migrate:pull",
    "seed": "npm --workspace=apps/backend run seed",
    "start:backend": "npm --workspace=apps/backend run start",
    "start:frontend": "npm --workspace=apps/frontend run preview",
    "start": "concurrently --kill-others --raw --handle-input \"npm run start:backend\" \"npm run start:frontend\""
  },
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "drizzle-orm": "^0.43.1",
    "eslint": "^8.57.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^4.3.4",
    "eslint-plugin-import": "^2.31.0",
    "typescript": "^4.9.5",
    "vitest": "^3.1.3"
  },
  "dependencies": {
    "serverless-http": "^3.2.0"
  },
  "engines": {
    "node": ">=22.8.0"
  }
}