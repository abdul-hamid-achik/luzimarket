{
  "name": "luzimarket",
  "private": true,
  "workspaces": [
    "apps/backend",
    "apps/frontend"
  ],
  "scripts": {
    "dev": "npx --yes dotenv-cli@latest -- concurrently --kill-others --raw \"npm --workspace=apps/backend run dev\" \"npm --workspace=apps/frontend run dev\"",
    "dev:frontend": "npx --yes dotenv-cli@latest -- npm --workspace=apps/frontend run dev",
    "dev:backend": "npx --yes dotenv-cli@latest -- npm --workspace=apps/backend run dev",
    "deploy": "npx --yes dotenv-cli@latest -- npx --yes vercel@latest --prod",
    "build": "npx --yes dotenv-cli@latest -- npm-run-all --parallel build:*",
    "build:frontend": "ROLLUP_NATIVE_DISABLE=1 npm --workspace=apps/frontend run build",
    "build:backend": "npm --workspace=apps/backend run build",
    "preview:frontend": "npm --workspace=apps/frontend run preview",
    "lint": "npm-run-all --parallel lint:*",
    "lint:backend": "npm --workspace=apps/backend run lint",
    "lint:frontend": "npm --workspace=apps/frontend run lint",
    "test:backend": "npx --yes dotenv-cli@latest -- npm --workspace=apps/backend run test",
    "test:frontend": "npx --yes dotenv-cli@latest -- npm --workspace=apps/frontend run test",
    "test": "npx --yes dotenv-cli@latest -- npm-run-all test:backend test:frontend",
    "postinstall": "if [ \"$VERCEL\" ]; then echo 'Skipping Playwright install on Vercel'; else playwright install; fi",
    "test:e2e": "npx --yes dotenv-cli@latest -- playwright test",
    "migrate:generate": "npx --yes dotenv-cli@latest -- npm --workspace=apps/backend run migrate:generate",
    "migrate:up": "npx --yes dotenv-cli@latest -- npm --workspace=apps/backend run migrate:up",
    "migrate:down": "npx --yes dotenv-cli@latest -- npm --workspace=apps/backend run migrate:down",
    "migrate:push": "npx --yes dotenv-cli@latest -- npm --workspace=apps/backend run migrate:push",
    "migrate:pull": "npx --yes dotenv-cli@latest -- npm --workspace=apps/backend run migrate:pull",
    "seed": "npx --yes dotenv-cli@latest -- npm --workspace=apps/backend run seed",
    "start:backend": "npm --workspace=apps/backend run start",
    "start:frontend": "npm --workspace=apps/frontend run preview",
    "start": "npx --yes dotenv-cli@latest -- concurrently --kill-others --raw --handle-input \"npm run start:backend\" \"npm run start:frontend\"",
    "studio": "npx --yes dotenv-cli@latest -- npx --workspace=apps/backend --yes drizzle-kit studio"
  },
  "devDependencies": {
    "@electric-sql/pglite": "^0.3.2",
    "@playwright/test": "^1.52.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/uuid": "^9.0.8",
    "concurrently": "^9.1.2",
    "drizzle-kit": "^0.31.1",
    "drizzle-orm": "^0.43.1",
    "eslint": "^9.1.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^4.3.4",
    "eslint-plugin-import": "^2.31.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5",
    "vitest": "^3.1.3"
  },
  "engines": {
    "node": ">=18.0.0 <=22.x"
  },
  "dependencies": {
    "better-sqlite3": "^11.10.0",
    "uuid": "^9.0.1"
  }
}
