# =================
# DATABASE CONFIGURATION
# =================
# Primary database connection (required)
DATABASE_URL="postgresql://username:password@ep-name.region.neon.tech/dbname?sslmode=require"

# Direct URL for migrations (same as DATABASE_URL for most setups)
DIRECT_URL="postgresql://username:password@ep-name.region.neon.tech/dbname?sslmode=require"

# Database connection pool settings (optional)
# DB_POOL_MAX=1
# DB_IDLE_TIMEOUT=10
# DB_CONNECT_TIMEOUT=5

# =================
# AUTHENTICATION
# =================
# NextAuth secret - generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-nextauth-secret-here"

# Base URL of your application
NEXTAUTH_URL="http://localhost:3000"
AUTH_URL="http://localhost:3000"
AUTH_TRUST_HOST="true"

# =================
# STRIPE PAYMENTS
# =================
# Stripe API keys (get from https://dashboard.stripe.com/apikeys)
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"

# Stripe webhook secret (for /api/webhooks/stripe)
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# =================
# EMAIL SERVICE
# =================
# Resend API key (get from https://resend.com/api-keys)
RESEND_API_KEY="re_your_resend_api_key"

# Email sender address (must be verified in Resend)
EMAIL_FROM="noreply@yourdomain.com"

# =================
# FILE STORAGE
# =================
# Vercel Blob token (get from Vercel dashboard > Storage)
BLOB_READ_WRITE_TOKEN="vercel_blob_rw_your_token"

# =================
# APPLICATION SETTINGS
# =================
# Public URL of your application
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Environment
NODE_ENV="development"

# Port for development server
PORT="3000"

# =================
# OPTIONAL FEATURES
# =================
# OpenAI API key for AI image generation (optional)
OPENAI_SECRET_KEY="sk-your_openai_api_key"

# Neon Local for Docker development (optional)
# NEON_API_KEY="your_neon_api_key"
# NEON_PROJECT_ID="your_project_id"
# NEON_BRANCH_ID="your_branch_id"
# PGSSLMODE="no-verify"
# NEON_LOCAL="1"

# =================
# TESTING & CI/CD
# =================
# For E2E tests
CI="false"
PW_WORKERS="2"
CI_ALL_BROWSERS="0"

# Playwright test output
# PLAYWRIGHT_JSON_OUTPUT_NAME="test-results.json"
# PLAYWRIGHT_JUNIT_OUTPUT_NAME="junit-results.xml"

# =================
# VERCEL DEPLOYMENT
# =================
# These are automatically set by Vercel, no need to set manually
# VERCEL="1"
# VERCEL_ENV="development|preview|production"
# VERCEL_URL="your-app.vercel.app"
