# Copy this file to .env.local and fill in the values
# Or use `npm run vercel:env:pull` to sync from Vercel

# Database (automatically set by Vercel Postgres addon)
POSTGRES_URL=
POSTGRES_PRISMA_URL=
POSTGRES_URL_NON_POOLING=
POSTGRES_USER=
POSTGRES_HOST=
POSTGRES_PASSWORD=
POSTGRES_DATABASE=

# Use POSTGRES_URL_NON_POOLING as DATABASE_URL for migrations
DATABASE_URL=

# Blob Storage (optional, falls back to local file storage)
BLOB_READ_WRITE_TOKEN=

# OpenAI (optional, for AI image generation)
OPENAI_SECRET_KEY=

# Email (Resend)
RESEND_API_KEY=
EMAIL_FROM=noreply@luzimarket.shop

# Stripe
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=

# OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=

# Cron Jobs (required for production)
CRON_SECRET=